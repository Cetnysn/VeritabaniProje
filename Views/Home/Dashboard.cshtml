@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var fuarlar = ViewData["Fuarlar"] as List<Fuar>;
    var sirketler = ViewData["Sirketler"] as List<Sirket>;
    var ziyaretciler = ViewData["Ziyaretciler"] as List<Ziyaretci>;
    var standlar = ViewData["Standlar"] as List<Stand>;
    var sektorler = ViewData["Sektorler"] as List<Sektor>;
}
<div class="row">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Fuarlar</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr align="center">
                                <th class="border-top-0">Fuar Adı</th>
                                <th class="border-top-0">Sektör Adı</th>
                                <th class="border-top-0">Fuar Tarihi</th>
                                <th class="border-top-0">Fuar Durumu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fuar in fuarlar)
                            {
                                if (fuar.aktif == false)
                                {
                                    <tr align="center">
                                        <td class="text-truncate">@fuar.isim</td>
                                        <td class="text-truncate">@fuar.sektor</td>
                                        <td class="text-truncate">@fuar.tarih</td>
                                        <td class="text-truncate"><i class="la la-dot-circle-o danger font-medium-1 mr-1"></i></td>
                                    </tr>
                                }
                                else
                                {
                                    <tr align="center">
                                        <td class="text-truncate">@fuar.isim</td>
                                        <td class="text-truncate">@fuar.sektor_adı</td>
                                        <td class="text-truncate">@fuar.tarih</td>
                                        <td class="text-truncate"><i class="la la-dot-circle-o success font-medium-1 mr-1"></i></td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Şirketler</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr align="center">
                                <th class="border-top-0">Şirket Adı</th>
                                <th class="border-top-0">Sektör Adı</th>
                                <th class="border-top-0">Şirket Yetkili</th>
                                <th class="border-top-0">Şirket Durumu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sirket in sirketler)
                            {
                                if (sirket.onay == true)
                                {
                                    <tr align="center">
                                        <td class="text-truncate">@sirket.isim</td>
                                        <td class="text-truncate">@sirket.sektor_adı</td>
                                        <td class="text-truncate">@sirket.yetkili</td>
                                        <td class="text-truncate"><i class="la la-dot-circle-o success font-medium-1 mr-1"></i></td>
                                    </tr>
                                }
                                else if (sirket.onay == false)
                                {
                                    <tr align="center">
                                        <td class="text-truncate">@sirket.isim</td>
                                        <td class="text-truncate">@sirket.sektor_adı</td>
                                        <td class="text-truncate"><a href="#">@sirket.yetkili</a></td>
                                        <td class="text-truncate"><i class="la la-dot-circle-o danger font-medium-1 mr-1"></i></td>
                                    </tr>

                                }
                                else
                                {
                                    <tr align="center">
                                        <td class="text-truncate">@sirket.isim</td>
                                        <td class="text-truncate">@sirket.sektor_adı</td>
                                        <td class="text-truncate"><a href="#">@sirket.yetkili</a></td>
                                        <td class="text-truncate"><i class="la la-dot-circle-o primary font-medium-1 mr-1"></i></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Sektörler</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr align="center">
                                <th class="border-top-0">Sektör Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sektor in sektorler)
                            {
                                <tr align="center">
                                    <td class="text-truncate">@sektor.isim</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Standlar</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr align="center">
                                <th class="border-top-0">Fuar Adı</th>
                                <th class="border-top-0">Salon No</th>
                                <th class="border-top-0">Stand No</th>
                                <th class="border-top-0">Şirket Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stand in standlar)
                            {
                                <tr align="center">
                                    <td class="text-truncate">@stand.fuar_isim</td>
                                    <td class="text-truncate">@stand.salon_no</td>
                                    <td class="text-truncate">@stand.stand_no</td>
                                    <td class="text-truncate">@stand.sirket_isim</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Ziyaretçiler</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr align="center">
                                <th class="border-top-0">Ziyaretçi Adı</th>
                                <th class="border-top-0">Ziyaretçi Telefon</th>
                                <th class="border-top-0">Ziyaretçi E-Posta</th>
                                <th class="border-top-0">Fuar Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ziyaretci in ziyaretciler)
                            {
                                <tr align="center">
                                    <td class="text-truncate">@ziyaretci.isim</td>
                                    <td class="text-truncate">@ziyaretci.tel</td>
                                    <td class="text-truncate">@ziyaretci.email</td>
                                    <td class="text-truncate">@ziyaretci.fuar_adı</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
